extends layout

block content
  section.vh-100
    .container.py-5.h-100
      .row.d-flex.justify-content-center.align-items-center.h-100
        .col-12.col-md-8.col-lg-6.col-xl-5
          .card.bg-dark.text-white(style="border-radius: 1rem;")
            .card-body.p-5.text-center
              form.mb-md-5.mt-md-4.pb-5(action="/login", method="post")
                h2.fw-bold.mb-2.text-uppercase Login
                p.text-white-50.mb-5 Please enter your login and password!

                .form-outline.form-white.mb-4
                  input.form-control.form-control-lg(type="email" id="email" name='email')
                  label.form-label(for="email") Email

                .form-outline.form-white.mb-4
                  input.form-control.form-control-lg(type="password" id="pass" name="password")
                  label.form-label(for="pass") Password

                //- <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!">Forgot password?</a></p>

                button.btn.btn-outline-light.btn-lg.px-5(type="submit") Login

              <div>
                <p class="mb-0">Don't have an account? <a href="/sign_up" class="text-white-50 fw-bold">Sign Up</a></p>
              </div>
  